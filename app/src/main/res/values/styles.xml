<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/woodbackground</item>
    </style>

    <style name="GameButton" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">@dimen/button_with_text_text_size</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/elevationColorShape</item>
    </style>

    <style name="YesNoStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">#8000</item>
        <item name="android:textColor">@color/colorYesNoButton</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="statusBarText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/whiteTransparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="lifeStatusStyle">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:src">@drawable/lifecircle</item>

    </style>


</resources>
