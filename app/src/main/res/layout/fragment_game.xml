<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.aisuluu.colors.GameFragment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="top"
        >
        <TextView
            android:height="35dp"
            android:id="@+id/timerText"
            style="@style/statusBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:    "
            />

        <TextView
            android:height="35dp"
            android:id="@+id/scoresText"
            style="@style/statusBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score  0"
            />

            <LinearLayout
                android:id="@+id/lifeLinearLayout"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@color/whiteTransparent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/lifeStatusStyle"/>
                <ImageView
                    android:id="@+id/imageView2"
                    style="@style/lifeStatusStyle"/>
                <ImageView
                    android:id="@+id/imageView3"
                    style="@style/lifeStatusStyle"/>
                <ImageView
                    android:id="@+id/imageView4"
                    style="@style/lifeStatusStyle"/>
            </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/textColorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/meaningImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/meaning" />
        <Button
            android:id="@+id/textButton"
            style="@style/GameButton"
            android:background="@drawable/round_rect_bg"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/colorButton"
            style="@style/GameButton"
            android:background="@drawable/round_rect_bg"
            android:elevation="@dimen/elevationColorShape"
            />
        <ImageView
            android:id="@+id/textcolorImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/text_color" />

    </LinearLayout>

    <ImageView
        android:id="@+id/answerStatusImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/hello_blank_fragment"
        android:src="@drawable/cross"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_gravity="bottom"
        >

        <Button
            android:id="@+id/negativeButton"
            android:text="NO"
            style="@style/YesNoStyle"
            android:layout_marginRight="4dp"
            />

        <Button
            android:id="@+id/positiveButton"
            android:text="YES"
            style="@style/YesNoStyle"
            android:layout_marginLeft="4dp"
            />


    </LinearLayout>
</FrameLayout>


